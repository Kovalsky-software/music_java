<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.vp_final.AddTrackController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <Label text="Управление треками" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Кнопки переключения режима -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ToggleButton fx:id="modeToggle" text="TableView режим" selected="false"
                      style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Обновить" onAction="#refreshData"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-font-size: 14;" />

    <!-- === РЕЖИМ 1: Классический (по умолчанию) === -->
    <VBox fx:id="classicMode" spacing="12" visible="true" managed="true">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Файл:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <Label fx:id="filePathLabel" text="Не выбран" style="-fx-text-fill: #7f8c8d;"/>
                <Button text="Выбрать..." onAction="#chooseFile"/>
            </HBox>

            <Label text="Название:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="titleField" promptText="Авто из тегов" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Исполнитель:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="artistComboBox" editable="true" promptText="Введите или выберите"
                      GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>

            <Label text="Альбом:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="albumField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Жанр:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <ComboBox fx:id="genreComboBox" editable="true" GridPane.rowIndex="4" GridPane.columnIndex="1"
                      maxWidth="Infinity" HBox.hgrow="ALWAYS"/>

            <Label text="Длительность:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="durationLabel" text="—" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Добавить трек" onAction="#addTrackClassic"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <!-- === РЕЖИМ 2: TableView === -->
    <VBox fx:id="tableMode" visible="false" managed="false" spacing="10">
        <TableView fx:id="tracksTable" prefHeight="500" editable="true">
            <!-- Колонки инициализируются в Java коде -->
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Добавить файл в таблицу" onAction="#chooseFileForTable"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Сохранить все изменения" onAction="#saveTableChanges"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <Button text="Закрыть окно" onAction="#closeWindow"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
</VBox>