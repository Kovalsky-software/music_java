<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<HBox fx:id="bottomNav" alignment="CENTER" spacing="30" style="-fx-background-color: #2c3e50; -fx-padding: 12;"
      xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.vp_final.BottomNavController">

    <padding>
        <Insets top="10" bottom="10"/>
    </padding>

    <Button text="Главная" onAction="#switchToHome"
            styleClass="nav-button" style="-fx-text-fill: #bdc3c7;" prefWidth="100"/>

    <Button text="Поиск" onAction="#switchToSearch"
            styleClass="nav-button" style="-fx-text-fill: #bdc3c7;" prefWidth="100"/>

    <Button text="Профиль" onAction="#switchToProfile"
            styleClass="nav-button" style="-fx-text-fill: #bdc3c7;" prefWidth="100"/>
</HBox>